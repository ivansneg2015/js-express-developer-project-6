extends ../layouts/application.pug

block header
  = t('views.tasks.edit.edit')

block content
  +formFor()(action=`/tasks/${task.id}` method='post')
    +input(task, 'name', t('views.tasks.edit.name'), errors)(type="text").mt-2.mb-2
    +textarea(task, 'description', t('views.tasks.edit.description'))
    +select(statuses, task, 'statusId', t('views.tasks.edit.status'), errors)
    +select(users, task, 'executorId', t('views.tasks.edit.executor'), errors)
    +select(labels, task, 'labels', t('views.tasks.edit.labels'), errors, multiple=true)
    input(name="_method" type="hidden" value="patch")
    +submit()(value=t('views.tasks.edit.submit'))
