extends ../layouts/application.pug

block header
  = t('views.labels.labels')

block content
  a.btn.btn-primary(href=route('newLabel'))= t('views.labels.createLabel')
  .table-responsive
    table.table.table-borderless.table-striped.mt-5.bg-white
      thead
        tr
          th= t('views.labels.id')
          th= t('views.labels.name')
          th= t('views.labels.createdAt')
      tbody
        each label in labels
          tr
            td= label.id
            td= label.name
            td= formatDate(label.createdAt)
            td
              .d-flex
                a.btn.btn-primary.me-1(href=`/labels/${label.id}/edit`)= t('views.labels.submit')
                +buttonTo(`/labels/${label.id}`, 'delete')(value=t('views.labels.delete') class="btn btn-danger")
